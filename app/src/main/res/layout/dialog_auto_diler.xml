<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Title Text -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT CALLING MODE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000" />

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/textSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Select the calling mode you prefer to make your outbound calls to manage call delay between each call click here"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#666666" />

    <!-- Call Delay Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/textCallDelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call delay in seconds"
            android:textSize="16sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editTextCallDelay"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:inputType="number"
            android:text="5"
            android:gravity="center"
            android:backgroundTint="#000000" />
    </LinearLayout>

    <!-- Standard Mode Button -->
    <Button
        android:id="@+id/buttonStandardMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="STANDARD MODE"
        android:backgroundTint="#B0C4DE"
        android:textColor="#000000"
        android:paddingVertical="12dp"
        android:textStyle="bold" />

